<Window x:Class="CartridgeManagementSystem.Views.GuestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:CartridgeManagementSystem.ViewModels"
        Title="Гость" Height="452" Width="800">
    <Window.DataContext>
        <vm:GuestViewModel />
    </Window.DataContext>
    <Grid>
        <TabControl>
            <TabItem Header="Просмотр картриджей">
                <Grid>
                    <DataGrid x:Name="CartridgesDataGrid" ItemsSource="{Binding Cartridges}" AutoGenerateColumns="False" Height="200" Margin="0,0,0,206">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Тип" Binding="{Binding Type}" />
                            <DataGridTextColumn Header="Модель" Binding="{Binding Model}" />
                            <DataGridTextColumn Header="Серийный номер" Binding="{Binding SerialNumber}" />
                            <DataGridTextColumn Header="Дата установки" Binding="{Binding InstallationDate}" />
                            <DataGridTextColumn Header="Статус" Binding="{Binding Status}" />
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
