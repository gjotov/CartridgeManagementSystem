<Window x:Class="CartridgeManagementSystem.Views.AddUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить пользователя" Height="200" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <TextBox x:Name="UsernameTextBox" Width="200" Margin="5" Text="Имя пользователя"/>
            <TextBox x:Name="PasswordTextBox" Width="200" Margin="5" Text="Пароль"/>
            <ComboBox x:Name="RoleComboBox" Width="200" Margin="5">
                <ComboBoxItem Content="Admin" />
                <ComboBoxItem Content="Editor" />
            </ComboBox>
            <Button Content="Добавить" Width="200" Margin="5" Click="AddButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
